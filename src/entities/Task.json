{
  "name": "Task",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nome da tarefa"
    },
    "description": {
      "type": "string",
      "description": "Descri\u00e7\u00e3o detalhada da tarefa"
    },
    "time": {
      "type": "string",
      "description": "Hor\u00e1rio da tarefa no formato HH:mm"
    },
    "color": {
      "type": "string",
      "enum": [
        "red",
        "yellow",
        "blue",
        "green"
      ],
      "description": "Cor de classifica\u00e7\u00e3o da tarefa"
    },
    "recurrence": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "monday",
          "tuesday",
          "wednesday",
          "thursday",
          "friday",
          "saturday",
          "sunday",
          "everyday"
        ]
      },
      "description": "Dias da semana em que a tarefa se repete"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "description": "Se a tarefa est\u00e1 ativa"
    },
    "alarm_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Se o alarme da tarefa est\u00e1 ativado"
    }
  },
  "required": [
    "name",
    "time",
    "color"
  ]
}